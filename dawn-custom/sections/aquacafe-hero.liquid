
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;  
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .aquacafe-hero {
    background: linear-gradient(135deg, {{ settings.aqua_primary }} 0%, {{ settings.aqua_secondary }} 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .aquacafe-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="water" patternUnits="userSpaceOnUse" width="100" height="100"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23water)"/></svg>');
    opacity: 0.3;
  }

  .aquacafe-hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 4rem 1rem;
  }

  .aquacafe-brand-name {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .aquacafe-tagline {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .aquacafe-cta-button {
    background: {{ settings.dubai_gold }};
    color: #1a1a1a;
    padding: 1rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    display: inline-block;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .aquacafe-cta-button:hover {
    background: {{ settings.dirham_green }};
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  }

  @media screen and (max-width: 749px) {
    .aquacafe-brand-name {
      font-size: 2.5rem;
    }
    
    .aquacafe-tagline {
      font-size: 1.2rem;
    }
  }
{%- endstyle -%}

<div class="aquacafe-hero section-{{ section.id }}-padding">
  <div class="aquacafe-hero-content">
    <h1 class="aquacafe-brand-name">
      {{ settings.custom_brand_name | default: "AquaCafe" }}
    </h1>
    <p class="aquacafe-tagline">
      {{ settings.custom_brand_description | default: "Premium Water Systems by DeliWer" }}
    </p>
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="aquacafe-cta-button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "AquaCafe Hero",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "button_label",
      "default": "Discover AquaCafe",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "AquaCafe Hero"
    }
  ]
}
{% endschema %}
